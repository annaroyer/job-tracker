<h1><%= @category.title %></h1>
<ul>
  <% @category.jobs.each do |job| %>
  <li>
    <%= link_to job.title, job_path(job.company, job) %>
  </li>
  <% end %>
</ul>
<ul>
  <li><%= link_to "Delete", category_path(@category), method: "delete", data: {confirm: 'Are you sure?'} %></li>
  <li><%= link_to "Edit", edit_category_path(@category) %></li>
</ul>
