<%= form_for [@company, @job] do |f| %>
  <ul>
    <% @job.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :level_of_interest %>
    <%= f.number_field :level_of_interest %>
  </p>
  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :category_id %>
    <%= f.collection_select(:category_id, @categories, :id, :title) %>
    <%= link_to "Create a New " %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
