All Jobs for <strong><%= @company.name %></strong>

<% @jobs.each do |job| %>
  <ul>
    <li>
      <%= link_to job.title, job_path(@company, job) %>
    </li>
    <li>
      <%= link_to 'Edit', edit_job_path(@company, job) %>
    </li>
    <li>
      <%= link_to 'Delete', job_path(@company, job), method: :delete, data: {confirm: "Really delete the job?"} %>
    </li>
  </ul>
<% end %>
